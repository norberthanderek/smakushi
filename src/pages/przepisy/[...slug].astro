---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import SearchModal from '../../components/SearchModal.astro';
import Footer from '../../components/Footer.astro';
import SEO from '../../components/SEO.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import DifficultyBadge from '../../components/DifficultyBadge.astro';
import Icon from '../../components/Icon.astro';
import Card from '../../components/Card.astro';
import ImagePlaceholder from '../../components/ImagePlaceholder.astro';
import { getAllRecipes, slugifyCategory } from '../../utils/recipeHelpers';
import { generateRecipeSchema, generateBreadcrumbSchema } from '../../utils/seo';

export async function getStaticPaths() {
  const recipes = await getAllRecipes();
  return recipes.map(recipe => ({
    params: { slug: recipe.slug },
    props: { recipe },
  }));
}

interface Props {
  recipe: CollectionEntry<'recipes'>;
}

const { recipe } = Astro.props;
const { Content } = await recipe.render();
const { title, description, thumbnail, timeEstimate, prepTime, cookTime, portions, difficulty, categories, ingredients, steps, tags, nutritionalInfo } = recipe.data;

const siteUrl = Astro.site?.toString() || 'https://smakushi.pl';
const recipeSchema = generateRecipeSchema(recipe, siteUrl);

const breadcrumbItems = [
  { label: 'Strona główna', href: '/' },
  { label: 'Przepisy', href: '/przepisy' },
  { label: title }
];
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbItems, siteUrl);

const keywords = [
  title,
  ...categories,
  ...(tags || []),
  difficulty,
  'przepis',
  'kuchnia',
  'gotowanie'
].filter(Boolean);

const imageUrl = thumbnail ? new URL(thumbnail.src, siteUrl).href : undefined;
const schemas = [recipeSchema, breadcrumbSchema];
---

<BaseLayout title={title}>
  <SEO
    slot="seo"
    title={title}
    description={description}
    image={imageUrl}
    imageAlt={title}
    type="article"
    keywords={keywords}
    author="Smakushi"
    schema={schemas}
  />
  <Navbar />
  <SearchModal />
  <main class="flex-1 container mx-auto px-4 py-8 max-w-5xl">
  <Breadcrumbs items={[
    { label: 'Strona główna', href: '/' },
    { label: 'Przepisy', href: '/przepisy' },
    { label: title }
  ]} />

    <article>
      <header class="mb-10">
        <h1 class="text-5xl font-bold mb-4 text-secondary">{title}</h1>
        <p class="text-xl text-base-content/70 mb-6">{description}</p>

        <div class="flex flex-wrap gap-2 mb-4">
          {categories.map((category) => (
            <a href={`/kategorie/${slugifyCategory(category)}`} class="badge badge-soft badge-primary badge-lg capitalize transition-transform hover:-translate-y-1">
              {category}
            </a>
          ))}
          <DifficultyBadge difficulty={difficulty} class="badge-lg" />
        </div>

        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag) => (
              <span class="badge badge-soft badge-sm">{tag}</span>
            ))}
          </div>
        )}
      </header>

      <div class="divider"></div>

      <div class="card bg-base-200 shadow-sm mb-10 overflow-hidden">
        <figure>
          {thumbnail ? (
            <Image
              src={thumbnail}
              alt={title}
              width={1200}
              height={400}
              class="w-full h-[400px] object-cover"
            />
          ) : (
            <ImagePlaceholder width="100%" height="400" class="bg-base-200" />
          )}
        </figure>
      </div>

      <div class="divider text-lg font-bold">Podstawowe informacje</div>

      <div class="stats stats-vertical lg:stats-horizontal shadow-sm mb-10 w-full">
        {prepTime && cookTime ? (
          <>
            <div class="stat">
              <div class="stat-figure text-secondary">
                <Icon name="clock" class="h-8 w-8" />
              </div>
              <div class="stat-title">Przygotowanie</div>
              <div class="stat-value text-secondary">{prepTime} min</div>
            </div>
            <div class="stat">
              <div class="stat-figure text-secondary">
                <Icon name="clock" class="h-8 w-8" />
              </div>
              <div class="stat-title">Oczekiwanie</div>
              <div class="stat-value text-secondary">{cookTime > 60 ? `${Math.floor(cookTime / 60)}h ${cookTime % 60 > 0 ? cookTime % 60 + 'min' : ''}` : `${cookTime} min`}</div>
            </div>
          </>
        ) : (
          <div class="stat">
            <div class="stat-figure text-secondary">
              <Icon name="clock" class="h-8 w-8" />
            </div>
            <div class="stat-title">Czas przygotowania</div>
            <div class="stat-value text-secondary">{timeEstimate} min</div>
          </div>
        )}

        <div class="stat">
          <div class="stat-figure text-secondary">
            <Icon name="people" class="h-8 w-8" />
          </div>
          <div class="stat-title">Porcje</div>
          <div class="stat-value text-secondary">{portions}</div>
        </div>

        {nutritionalInfo && nutritionalInfo.calories && (
          <div class="stat">
            <div class="stat-figure text-accent">
              <Icon name="chart" class="h-8 w-8" />
            </div>
            <div class="stat-title">Kalorie</div>
            <div class="stat-value text-accent">{nutritionalInfo.calories}</div>
            <div class="stat-desc">na porcję</div>
          </div>
        )}
      </div>

      <div class="divider text-lg font-bold">Wartości odżywcze</div>

      {nutritionalInfo && (
        <Card class="mb-10">
          <h3 class="card-title text-2xl mb-4">Informacje żywieniowe</h3>
          <p class="text-sm text-base-content/60 mb-4">Na porcję</p>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
            {nutritionalInfo.protein && (
              <div class="text-center p-4 bg-base-100 rounded-box">
                <div class="text-sm text-base-content/70 mb-1">Białko</div>
                <div class="text-2xl font-bold text-secondary">{nutritionalInfo.protein}</div>
                <div class="text-xs text-base-content/50">gramów</div>
              </div>
            )}
            {nutritionalInfo.carbs && (
              <div class="text-center p-4 bg-base-100 rounded-box">
                <div class="text-sm text-base-content/70 mb-1">Węglowodany</div>
                <div class="text-2xl font-bold text-accent">{nutritionalInfo.carbs}</div>
                <div class="text-xs text-base-content/50">gramów</div>
              </div>
            )}
            {nutritionalInfo.fat && (
              <div class="text-center p-4 bg-base-100 rounded-box">
                <div class="text-sm text-base-content/70 mb-1">Tłuszcze</div>
                <div class="text-2xl font-bold text-warning">{nutritionalInfo.fat}</div>
                <div class="text-xs text-base-content/50">gramów</div>
              </div>
            )}
          </div>
        </Card>
      )}

      <div class="divider text-lg font-bold">Szczegóły przepisu</div>

      <div class="grid lg:grid-cols-[fit-content(50%)_1fr] gap-8 mb-10">
        <Card>
          <h3 class="card-title text-2xl mb-4">Składniki</h3>
          <div class="overflow-x-auto">
            <table class="table">
              <tbody>
                {ingredients.map((ingredient, index) => (
                  <tr class="hover">
                    <td class="font-medium capitalize">{ingredient.name}</td>
                    <td class="text-right font-semibold">{ingredient.amount}</td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </Card>

        <Card>
          <h3 class="card-title text-2xl mb-6">Instrukcje</h3>
          <ul class="timeline timeline-vertical timeline-compact">
            {steps.map((step, index) => (
              <li>
                {index > 0 && <hr class="bg-secondary" />}
                <div class="timeline-middle">
                  <div class="w-8 h-8 rounded-full bg-secondary text-secondary-content flex items-center justify-center font-bold text-sm">
                    {index + 1}
                  </div>
                </div>
                <div class="timeline-end timeline-box">{step}</div>
                {index < steps.length - 1 && <hr class="bg-secondary" />}
              </li>
            ))}
          </ul>
        </Card>
      </div>

      <div class="divider text-lg font-bold">Dodatkowe informacje</div>

      <Card class="mb-10">
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
      </Card>

      <div class="divider"></div>

      <div class="flex flex-wrap gap-4 justify-between items-center mt-6">
        <a href="/przepisy" class="btn btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Powrót do przepisów
        </a>
        <div class="join">
          <button class="btn btn-soft btn-secondary join-item" onclick="window.print()">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
            </svg>
            Drukuj
          </button>
          <button class="btn btn-soft btn-primary join-item" onclick="navigator.share ? navigator.share({title: document.title, url: window.location.href}) : alert('Udostępnianie nie jest obsługiwane')">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
            Udostępnij
          </button>
        </div>
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>
