---
export interface Props {
  width?: string;
  height?: string;
  text?: string;
  class?: string;
}

const {
  width = '100%',
  height = '100%',
  text = 'Brak zdjÄ™cia',
  class: className = '',
} = Astro.props;
---

<svg
  width={width}
  height={height}
  xmlns="http://www.w3.org/2000/svg"
  class={className}
>
  <rect width="100%" height="100%" fill="oklch(var(--b2))" />
  <text
    x="50%"
    y="50%"
    text-anchor="middle"
    dy=".3em"
    fill="oklch(var(--bc))"
    font-size="24"
    opacity="0.3"
  >
